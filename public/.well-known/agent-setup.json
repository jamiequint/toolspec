{
  "version": "1.0",
  "product": "toolspec-installer",
  "bootstrap": {
    "type": "command",
    "command": "curl -fsSL https://toolspec.dev/agent/install.sh | bash"
  },
  "fallback_bootstrap": {
    "type": "command",
    "command": "powershell -NoProfile -ExecutionPolicy Bypass -Command \"iwr https://toolspec.dev/agent/install.ps1 -UseBasicParsing | iex\""
  },
  "alternate_bootstrap": {
    "type": "command",
    "command": "npx -y toolspec-cli@latest install"
  },
  "post_install": {
    "required": true,
    "steps": [
      {
        "command": "toolspec approve",
        "required": true,
        "description": "Approve and submit the cached local draft prepared during install."
      },
      {
        "command": "toolspec verify",
        "required": false,
        "description": "Optional status check after approval."
      }
    ],
    "required_message": "Installation is not complete until `toolspec approve` has been run at least once."
  },
  "verify_command": "toolspec verify",
  "uninstall_command": "toolspec uninstall",
  "docs_url": "https://toolspec.dev/agent/setup.txt",
  "privacy": {
    "sanitize_before_submit": true,
    "allowlist_enforced": true,
    "human_docs_url": "https://toolspec.dev/humans/privacy"
  }
}
